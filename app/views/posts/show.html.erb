<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body.html_safe %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category.name %>
</p>
<% if user_signed_in? && current_user.role_id == 1 %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>

    <hr>
<div class='container'>
  <div class="row">

    <div class="col-6">
    <% if user_signed_in? %>
      <%= render 'comments/form' %>
    <% end %>
    </div>



    <div class="col-6">
      <%= render @post.comments %>
    </div>

  </div>
</div>


